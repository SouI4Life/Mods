// RaJCeL inBattleStatistics Date Time config file
{
    // enables panel
    "enable": false,
    // enables errors trace in python.log
    "debug": false,
    "message": {
        // allows to move panels message in battle with mouse drag and drop
        "drag": true,
        // horizontal align; determine place from which "x" are calculated; available values: "left", "center", "right"
        "hAlign": "right",
        // vertical align; determine place from which "y" are calculated; available values: "top", "center", "bottom"
        "vAlign": "top",
        "x": 130,
        "y": 0,
        "alpha": 1.0, // 0.0 - 1.0; 0.0 fully transparent; 1.0 fully visible
        "height": 25,
        "width": 75,
        "shadow": {
            "distance": 1,
            "angle": 45,
            "color": "#000000",
            "alpha": 0.75,
            "blurX": 5,
            "blurY": 5,
            "strength": 5,
            "quality": 1
        },
        "format": "<b><font size='20' color='{{c:default}}' face='Arial'>{{time}}</font></b>"
    },
    // colors section; "default" for standard text; rest of values for coloring available macros according to its name
    "colors": {
        "default": "#FFFFFF", // "#FFFFFF" - white
        "date":    "#FFFFFF", // "#FFFFFF" - white
        "time":    "#FFFFFF"  // "#FFFFFF" - white
    }
}
// -------------------------------------------------------------------------------------------------
// available macros:
// -------------------------------------------------------------------------------------------------
// {{date}} - Current date (in YYYY-MM-DD foramt),
// {{time}} - Current time (in HH:MM format).
// -------------------------------------------------------------------------------------------------