// RaJCeL inBattleStatistics Crew skills config file
{
    // enables panel
    "enable": false,
    // enables errors trace in python.log
    "debug": false,
    // hotkey to show panel info
    "hotkey": 21,
    "showDevices": true,
    "message": {
        // allows to move panels message in battle with mouse drag and drop
        "drag": true,
        // horizontal align; determine place from which "x" are calculated; available values: "left", "center", "right"
        "hAlign": "left",
        // vertical align; determine place from which "y" are calculated; available values: "top", "center", "bottom"
        "vAlign": "top",
        "x": 300,
        "y": 275,
        "alpha": 0.9, // 0.0 - 1.0; 0.0 fully transparent; 1.0 fully visible
        "height": 500,
        "width": 300,
        "shadow": {
            "distance": 1,
            "angle": 45,
            "color": "#000000",
            "alpha": 0.75,
            "blurX": 5,
            "blurY": 5,
            "strength": 5,
            "quality": 1
        },
        "formatImage": "<img src='img://%s' width='45' height='45'>",
        "formatLabel": "\t<b><font size='15' color='%s' face='Arial'>%s</font></b>"
    },
    "colors": {
        "skillLevel":   "#FFFFFF"
    }
}