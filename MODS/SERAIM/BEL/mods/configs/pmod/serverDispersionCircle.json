// Серверный круг разброса.
// Server dispersion circle.

{
	// true - включить модуль.
	// true - enable the module.
	"enable": true,
	
	// Ввиду громоздкого набора параметров, а также идентичности настроек для каждого режима, коментарии добавлены только в одном режиме из троих.
	// Because bulky set of parameters and configuration identity for each mode, comments are added only in one mode of the three. 
	
	// Аркадный режим.
	// Arcade mode.
	"arcade": {
		
		// true - включить функцию.
		// true - enable function.
		"enable" : true,
		
		// Показывать клиентский круг разброса.
		// Show client circle of dispersion.
		"showClientMarker": true,
		
		// Показывать серверный круг разброса.
		// Show server circle of dispersion.
		"showServerMarker": true,
		
		// true - текстурный круг разброса, false - flash круг разброса (1 в 1 как основное только цвет другой).
		// true - texture dispersion circle, false - flash dispersion circle (1 to 1 as the main, only color other).
		"textureServerMarker": true,
		
		// Масштаб текстурного круга разброса.
		// The scale of texture dispersion circle.
		"textureMarkerScale": 1.0,
		
		// Люди которые делают свои текстуры, или используют какие-то не стандартные, знакомы с этими параметрами.
		// People who make their texture, or use any non-standard, familiar with these parameters.
		"crosshairElements" : {
			"top":    {"path": "{{config}}gunMarkers/crakker/top.dds",    "size": [16, 16]},
			"right":  {"path": "{{config}}gunMarkers/crakker/right.dds",  "size": [16, 16]},
			"bottom": {"path": "{{config}}gunMarkers/crakker/bottom.dds", "size": [16, 16]},
			"left":   {"path": "{{config}}gunMarkers/crakker/left.dds",   "size": [16, 16]},
			"center": {"path": "{{config}}gunMarkers/crakker/center.dds", "size": [16, 16]}
		}
	},
	
	// Снайперский режим.
	// Sniper mode.
	"sniper": {
		"enable": true,
		"showClientMarker": true,
		"showServerMarker": true,
		"textureServerMarker": true,
		"textureMarkerScale": 0.5,
		"crosshairElements" : {
			"top": {"path": "{{config}}gunMarkers/crakker/top.dds", "size": [16, 16]},
			"right": {"path": "{{config}}gunMarkers/crakker/right.dds", "size": [16, 16]},
			"bottom": {"path": "{{config}}gunMarkers/crakker/bottom.dds", "size" : [16, 16]},
			"left": {"path": "{{config}}gunMarkers/crakker/left.dds", "size" : [16, 16]},
			"center": {"path": "{{config}}gunMarkers/crakker/center.dds", "size" : [16, 16]}
		}
	},
	
	// Артилерийский режим.
	// Strategic mode.
	"strategic": {
		"enable": true,
		"showClientMarker": true,
		"showServerMarker": true,
		"textureServerMarker": true,
		"textureMarkerScale": 1.0,
		"crosshairElements" : {
			"top": {"path": "{{config}}gunMarkers/crakker/top.dds", "size": [16, 16]},
			"right": {"path": "{{config}}gunMarkers/crakker/right.dds", "size": [16, 16]},
			"bottom": {"path": "{{config}}gunMarkers/crakker/bottom.dds", "size" : [16, 16]},
			"left": {"path": "{{config}}gunMarkers/crakker/left.dds", "size" : [16, 16]},
			"center": {"path": "{{config}}gunMarkers/crakker/center.dds", "size" : [16, 16]}
		}
	},
	
	// Быстрое переключение по кнопке
	// Fast switching by key
	"switchByKey" : {
		
		// true - включить функцию.
		// true - enable function.
		"enable" : true,
		
		// Горячая клавиша для включения/отключения серверного круга разброса.
		// Hot key to activate/deactivate the server circle of dispersion.
		"activateKey": "O",
		
		// true - Показывать сообщение об переключении, внизу над расходниками.
		// true - Show message about switch at the bottom of the consumables.
		"showInfo": true,
		
		// Сообщение при включении серверного круга разброса.
		// Message when you turn on the server circle of dispersion.
		"activateMessage": "Серверний приціл увімкнено",
		
		// Сообщение при включении серверного круга разброса.
		// Message when you turn on the server circle of dispersion.
		"deactivateMessage": "Серверний приціл вимкнено"
	}
}
